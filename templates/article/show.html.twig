{% extends 'base.html.twig' %} {% block title %}Article{% endblock %} {% block
body %}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="{{ path('app_article_index') }}">Admin</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">Affichage</li>
  </ol>
</nav>
<h3>Article</h3>

<table class="table">
  <tbody>
    <tr>
      <th>Slug</th>
      <td>{{ article.slug }}</td>
    </tr>
    <tr>
      <th>Cover</th>
      <td>
        <img
          class="card-img-top"
          src="{{asset('uploads/covers/' ~ article.cover)}}"
          alt="Cover image"
          style="height: 400px"
        />
      </td>
    </tr>
    <tr>
      <th>Titre</th>
      <td>{{ article.title }}</td>
    </tr>
    <tr>
      <th>Contenu</th>
      <td>{{ article.content | raw }}</td>
    </tr>
    <tr>
      <th>Date de Creation</th>
      <td>
        {{ article.dateCreated ? article.dateCreated|date('Y-m-d H:i:s') : '' }}
      </td>
    </tr>
  </tbody>
</table>
<div class="action">
  <a
    class="btn btn-action btn-sm"
    href="{{ path('app_article_edit', { id: article.id }) }}"
  >
    <i class="fa fa-pencil"></i>
  </a>

  {{ include("article/_delete_form.html.twig") }}
</div>
{% endblock %}
